<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.angcyo.tablayout.DslTabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/transparent10"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/recycler_view"
        app:tab_draw_highlight="true"
        app:tab_highlight_drawable="@mipmap/ic_hint_vertical_b"
        app:tab_highlight_height_offset="10dp"
        app:tab_indicator_drawable="@mipmap/ic_hint_vertical"
        app:tab_indicator_height="16dp"
        app:tab_indicator_style="STYLE_TOP|STYLE_FOREGROUND"
        app:tab_indicator_width="16dp"
        app:tab_orientation="VERTICAL"
        app:tab_select_color="@color/colorAccent">

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="R" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="最新" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="排行榜3" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="Android" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组合" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swift" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="Vue" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="前->端" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="设计" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="其他资源1" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="其他资源2" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="其他资源3" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="其他资源4" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="其他资源5" />

        <TextView
            style="@style/TabVerticalItemStyle"
            android:text="其他资源6" />

    </com.angcyo.tablayout.DslTabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/transparent20"
        android:gravity="center"
        app:layout_constraintHorizontal_weight="0.7"
        app:layout_constraintLeft_toRightOf="@id/tab_layout"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="test" />

</androidx.constraintlayout.widget.ConstraintLayout>